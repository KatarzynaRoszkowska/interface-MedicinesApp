<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.roszkowska.med">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserInformationActivity"
            android:label="Informacje o użytkowniku" />
        <activity
            android:name=".AppInformationActivity"
            android:label="Informacje o aplikacji" />
        <activity
            android:name=".MainActivity"
            android:label="Strona główna"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScanTheCode"
            android:label="Informacje o leku" />

        <activity android:name=".MyPharmacy"
            android:label="Moje leki w apteczce"/>
    </application>

</manifest>