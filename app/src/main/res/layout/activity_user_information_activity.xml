<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".api.userInformation.UserInformationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_marginTop="20dp"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/userCardView"
            android:layout_width="340dp"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/cerclebackgroundyello"
                    android:padding="10dp"
                    android:src="@drawable/ic_perm_identity_black_24dp" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:hint="Imię i nazwisko"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgrey" />

                <TextView
                    android:id="@+id/userMedicines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Przyjmuję leki: "
                    android:padding="5dp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/userMedicinesINFO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="lekA, lekB, lekC"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/userContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Numer upoważniony do kontaktu, w razie wypadku: "
                    android:padding="5dp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/userContactINFO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="657338854"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/userAllergie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Uczulony na: "
                    android:padding="5dp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/userAllergieINFO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="czekolda, gluten"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/userEMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Email: "
                    android:padding="5dp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/userEMailINFO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="anna.nowal@gmail.com"
                    android:padding="5dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/UserInfobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dodaj informacje"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

</LinearLayout>