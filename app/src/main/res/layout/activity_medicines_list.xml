<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/medicinesCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageListOfMedicines"
                    android:layout_width="83dp"
                    android:layout_height="90dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_note_add_green_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="269dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameListOfMedicines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:hint="nazwa leku"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/specialityListOfMedicines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data ważności: 08/07/2020" />

                <TextView
                    android:id="@+id/compositionListOfMedicines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="skald...." />

                <TextView
                    android:id="@+id/formOfTheDragListOfMedicines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>